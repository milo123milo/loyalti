<div class="header">
    <div class="h1">
        Users
    </div>
    <div class="head-left">
        <button  style="margin-bottom: 4px;" id="logout-button" type="button" class=" bt btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">+ Create new</button>
        <button onclick="history.back()" style="margin-bottom: 4px;" id="logout-button" type="button" class="bt btn btn-primary">< Back</button>
    </div>
