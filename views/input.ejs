  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: block;
  stroke-width: 2;
  stroke: #fff;
  stroke-miterlimit: 10;
  box-shadow: inset 0px 0px 0px #d02a35;
  animation: fillx .4s ease-in-out .4s forwards, scale .3s ease-in-out .9s both;
}

